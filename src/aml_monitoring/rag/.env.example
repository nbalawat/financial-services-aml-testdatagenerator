# GCP Project Configuration
PROJECT_ID=your-project-id
REGION=us-east4
ZONE=us-east4-a

# GitHub Configuration
GITHUB_OWNER=nbalawat
GITHUB_REPO=financial-services-aml-testdatagenerator
GITHUB_INSTALLATION_ID=  # This will be populated by deploy.sh

# Cloud Storage
BUCKET_NAME=your-document-bucket
UPLOAD_FOLDER=documents

# Cloud SQL
DB_USER=your-db-user
DB_PASS=your-db-password
DB_NAME=your-db-name
DB_HOST=your-db-host
DB_PORT=5432
DB_CONNECTION=postgresql+pg8000://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Pub/Sub
PUBSUB_TOPIC=document-uploaded
PUBSUB_SUBSCRIPTION=document-processor-sub

# Cloud Run
DOCUMENT_PROCESSOR_SERVICE=document-processor
QUERY_SERVICE=query-service
MIN_INSTANCES=1
MAX_INSTANCES=10

# Vertex AI
VERTEX_AI_LOCATION=us-central1
EMBEDDING_MODEL=textembedding-gecko@latest
MAX_BATCH_SIZE=5

# Application Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# Security
ALLOWED_ORIGINS=https://your-frontend-domain.com
API_KEY=your-api-key

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=INFO

# Optional Features
ENABLE_CACHING=true
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Development Settings (for local development)
LOCAL_PORT=8080
FLASK_ENV=development
FLASK_DEBUG=1

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Document Processing
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,docx,txt,md

# Search Settings
MIN_SIMILARITY_SCORE=0.7
RERANK_RESULTS=true
USE_SEMANTIC_CACHE=true
